#!/bin/bash -e
echo ===============================
echo == multi-ping test tool v1.0 ==
echo ===============================

#This is a comment.

quiet_mode=0
server_list=$@

if [ "$1" == "-q" ]; then
        quiet_mode=1
        server_list="${@:2}"
fi

for server in $server_list; do
        if [ $quiet_mode == 1 ]; then
        fping $server 2>/dev/null
        else
            fping $server
    fi
done
